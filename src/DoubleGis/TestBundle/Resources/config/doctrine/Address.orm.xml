<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="DoubleGis\TestBundle\Entity\Address" table="address">
    <indexes>
      <index name="street" columns="street"/>
      <index name="house" columns="house"/>
      <index name="coordinates" columns="lat,lon"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="street" type="string" column="street" length="128" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="house" type="string" column="house" length="45" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="lat" type="float" column="lat" precision="10" scale="0" nullable="false"/>
    <field name="lon" type="float" column="lon" precision="10" scale="0" nullable="false"/>
  </entity>
</doctrine-mapping>
